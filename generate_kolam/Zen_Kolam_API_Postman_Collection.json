    {
      "name": "General Kolam Generation",
      "item": [
        {
          "name": "Generate Any Kolam Type",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/kolam?kolam_type=geometric&size=7&background=%237b3306&brush=%23ffffff",
              "host": ["{{base_url}}"],
              "path": ["api", "kolam"],
              "query": [
                {
                  "key": "kolam_type",
                  "value": "geometric",
                  "description": "Type of kolam: geometric, iyal, rangoli, kavi, traditional_1d"
                },
                {
                  "key": "size",
                  "value": "7",
                  "description": "Grid size (3-15)"
                },
                {
                  "key": "background",
                  "value": "#7b3306",
                  "description": "Background color in hex format"
                },
                {
                  "key": "brush",
                  "value": "#ffffff",
                  "description": "Pattern color in hex format"
                }
              ]
            },
            "description": "Generate any type of kolam pattern with customizable parameters"
          }
        }
      ]
    },
